<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record model="ir.actions.act_window" id="action_igame_list">
            <field name="name">Ientelligent Game</field>
            <field name="res_model">og.igame</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create a game
                </p>
            </field>
        </record>

        <menuitem name="iGame"
            id="menu_igame"
            parent="menu_main_igame"
            sequence="2" />

        <menuitem id="menu_igame_list"
            name="iGames"
            parent="menu_igame"
            action="action_igame_list"
            sequence="25"/>

        <record id="view_og_igame_tree" model="ir.ui.view">
            <field name="name">igame.tree</field>
            <field name="model">og.igame</field>
            <field name="arch" type="xml">
                <tree string="Intelligent Game">
                    <field name="sequence"/>
                    <field name="parent_id"/>
                    <field name="name"/>
                    <field name="game_type"/>
                    <field name="match_type"/>
                    <field name="org_type"/>
                    <field name="score_uom"/>

                </tree>
            </field>
        </record>

        <record id="view_og_igame_score_tree" model="ir.ui.view">
            <field name="name">igame.score.tree</field>
            <field name="model">og.igame.score</field>
            <field name="arch" type="xml">
                <tree string="Intelligent Game Score">
                    <field name="igame_id"/>
                    <field name="partner_id"/>
                    <field name="number"/>
                    <field name="position"/>
                    <field name="score"/>
                    <field name="score_uom"/>
                    <field name="rank"/>

                </tree>
            </field>
        </record>

        <record id="view_og_igame_score_line_tree" model="ir.ui.view">
            <field name="name">igame.score.line.tree</field>
            <field name="model">og.igame.score.line</field>
            <field name="arch" type="xml">
                <tree string="Intelligent Game Score Line">
                    <field name="igame_id"/>
                    <field name="group_id"/>
                    <field name="partner_id"/>
                    <field name="round_id"/>
                    <field name="position"/>
                    <field name="deal_id"/>
                    <field name="score"/>
                    <field name="score_uom"/>
                    <field name="rank"/>

                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_igame_score_list">
            <field name="name">Ientelligent Game Score</field>
            <field name="res_model">og.igame.score</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Join a game
                </p>
            </field>
        </record>

        <menuitem id="menu_game_score_list"
            name="iGames Score"
            parent="menu_igame"
            action="action_igame_score_list"
            sequence="30"/>

</odoo>
